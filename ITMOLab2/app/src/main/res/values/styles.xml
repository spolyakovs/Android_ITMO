<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBasic" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="ButtonMenuFragment" parent="ButtonBasic">
        <item name="backgroundTint">?attr/backgroundPrimaryVariant</item>
        <item name="android:textColor">?attr/textPrimaryVariant</item>
    </style>
    <style name="ButtonMenuFragmentIcon" parent="ButtonBasic">
        <item name="backgroundTint">?attr/backgroundPrimaryVariant</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">35sp</item>
        <item name="iconTint">?attr/textPrimaryVariant</item>
    </style>
</resources>