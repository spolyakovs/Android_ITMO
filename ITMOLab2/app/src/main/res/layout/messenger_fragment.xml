<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MessengerFragmentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textMessenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger fragment"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/messengerShowCounterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/messengerShowCounterButton"
        style="@style/ButtonMenuFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textMessenger"
        app:layout_constraintBottom_toTopOf="@id/messengerCounterButton" />

    <Button
        android:id="@+id/messengerCounterButton"
        style="@style/ButtonMenuFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Counter++"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messengerShowCounterButton"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>