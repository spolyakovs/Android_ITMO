<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBasic" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">2px</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="ButtonNumber" parent="ButtonBasic">
        <item name="backgroundTint">?attr/backgroundPrimary</item>
        <item name="android:textColor">?attr/textPrimary</item>
    </style>
    <style name="ButtonOperator" parent="ButtonBasic">
        <item name="backgroundTint">?attr/backgroundPrimaryVariant</item>
        <item name="android:textColor">?attr/textPrimaryVariant</item>
    </style>
    <style name="ButtonOperatorAdded" parent="ButtonBasic">
        <item name="backgroundTint">?attr/backgroundSecondary</item>
        <item name="android:textColor">?attr/textSecondary</item>
    </style>
    <style name="ButtonOperatorAddedIcon" parent="ButtonBasic">
        <item name="backgroundTint">?attr/backgroundSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">40sp</item>
        <item name="iconTint">?attr/textSecondary</item>
    </style>
    <style name="ButtonEquals" parent="ButtonBasic">
        <item name="backgroundTint">?attr/backgroundSecondaryVariant</item>
        <item name="android:textColor">?attr/textSecondaryVariant</item>
    </style>
</resources>