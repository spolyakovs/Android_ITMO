<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBasic" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/backgroundButtonSecondary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="ButtonReaction" parent="ButtonBasic">
        <item name="iconGravity">textStart</item>
        <item name="iconSize">35sp</item>
        <item name="iconTint">?attr/textSecondary</item>
    </style>

    <style name="TinderCardName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/textPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">?attr/textPrimaryOutline</item>
        <item name="android:shadowDx">1.5</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">2.5</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="TinderCardDescription" parent="TinderCardName">
        <item name="android:textSize">18sp</item>
    </style>
</resources>